<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <nav>
    <%= button_to "Back to Shelters", "/shelters", method: :get %>
    <%= button_to "Favorites: #{favorites.total_count}", "/favorites", method: :get %>
  </nav>

  <% flash.each do |type, message| %>
	  <p><%= message %></p>
  <% end %>



  <body>
    <%= yield %>
  </body>
</html>
