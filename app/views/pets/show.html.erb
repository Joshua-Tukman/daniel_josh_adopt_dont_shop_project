<h1><%= @pet.name %></h1><br>

    <img style="width:40vw" src="<%= @pet.image %>">
    <h3>Age: <%= @pet.age  %></h3>
    <h3>Sex: <%= @pet.sex  %></h3>
    <h3>Status: <%= @pet.adoptable? %></h3>
    <h3>Status: <%= @pet.description %></h3>

<%= button_to "Update Pet Info", "/pets/#{@pet.id}/edit", method: :get %>
<%= button_to "Delete Pet", "/pets/#{@pet.id}", method: :delete %>

<% if favorites.contents.include?(@pet.id.to_s) %>
    <%= button_to "Remove pet from Favorites", "/favorites/#{@pet.id}", method: :delete %>
<% else %>
    <%= button_to "Add Pet to Favorites", "/favorites/#{@pet.id}", method: :patch %>
<%end%>
