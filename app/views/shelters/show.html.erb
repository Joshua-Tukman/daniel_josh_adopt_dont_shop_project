<h1><%= @shelter.name %></h1>

<h3><%= @shelter.address %>
<h3><%= @shelter.city %>
<h3><%= @shelter.state %>
<h3><%= @shelter.zip %><br>

<%= button_to "View Pets", "/shelters/#{@shelter.id}/pets", method: :get %>
<%= button_to "Edit Shelter", "/shelters/#{@shelter.id}/edit", method: :get %>
<%= button_to "Remove Shelter", "/shelters/#{@shelter.id}", method: :delete %>

<% @shelter.reviews.each do |review|%>
<section id="review-<%=review.id%>">
<h2>Review Name: <%= review.title %></h2>
<h3>Review Content: <%= review.content %></h3>
<h3>Review Rating: <%= review.rating %></h3>
<img style="width:40vw" src="<%= review.image %>">
</section>
<%end%>
